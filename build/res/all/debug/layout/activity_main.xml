<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <EditText
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/destinationTxtBx"
            android:hint="Destination"
            android:layout_below="@+id/sourceTxtBx"
            android:layout_alignLeft="@+id/sourceTxtBx"
            android:layout_marginTop="13dp"/>

    <EditText
            android:layout_width="200dp"
            android:hint="Source"
            android:layout_height="wrap_content"
            android:id="@+id/sourceTxtBx"
            android:layout_below="@+id/editText"
            android:layout_alignLeft="@+id/editText"/>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Find My Route"
            android:id="@+id/findRouteButton"
            android:layout_below="@+id/destinationTxtBx"
            android:layout_alignRight="@+id/destinationTxtBx"
            android:onClick="bFunction"
            android:layout_marginTop="23dp"/>

</RelativeLayout>
