<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Route">

    <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/src_route_TxtBox"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="41dp"
            />

    <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/dest_route_TxtBox"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/src_route_TxtBox"
            android:layout_alignLeft="@+id/src_route_TxtBox"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/jsonTextView"
            android:layout_below="@+id/dest_route_TxtBox"
            android:layout_alignLeft="@+id/dest_route_TxtBox"
            android:layout_marginTop="27dp"/>

</RelativeLayout>
